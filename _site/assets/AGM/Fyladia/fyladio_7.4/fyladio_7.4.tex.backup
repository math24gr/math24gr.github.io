 \item $17-13+15$
\end{enumerate}
\end{multicols}
 \item $-(5+2)+(4+1)$    %to 3o
\begin{multicols}{4}
\begin{enumerate}[i)]
 \item $-5-2-4-1$
 \item $-5-2-4+1$
 \item $5+2+4+1$
 \item $-5-2+4+1$
\end{enumerate}
\end{multicols}
 \item $(5+1)-(17-13)$    %to 4o
\begin{multicols}{4}
\begin{enumerate}[i)]
 \item $5+1+17+13$
 \item $-5-1-17-13$
 \item $5+1-17+13$
